def numero_aleatorio_5_10():
    num = random.randint(5, 10)
    return num

def tres_numeros_aleatorios():
    numeros = [random.randint(1, 100) for _ in range(3)]
    return numeros

def numero_aleatorio_10_30():
    num = random.choice(range(10, 31))
    return num

def contagem_regressiva():
    for i in range(10, 0, -1):
        print(i)
        time.sleep(0.5)  
    print(" Fogo!")


def soma_pares(numero):
    soma = 0
    for i in range(2, numero + 1, 2):  
        soma += i
    return soma

def tabuada(numero):
    print(f"\nğŸ“˜ Tabuada do {numero}")
    for i in range(1, 11):
        print(f"{numero} x {i} = {numero * i}")

def impares_reversos():
    for i in range(99, 0, -2):
        print(i)
